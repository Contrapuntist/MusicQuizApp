            </RadioGroup>
        </LinearLayout>
        <!--Question 4-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="#212121"
                android:textSize="22sp"
                android:text="@string/question_four" />

            <RadioGroup
                android:id="@+id/question_four_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/question_four_answer_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:text="@string/lafayette"/>

                <RadioButton
                    android:id="@+id/question_four_answer_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:text="@string/alexander"/>

                <RadioButton
                    android:id="@+id/question_four_answer_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:text="@string/washington"/>

                <RadioButton
                    android:id="@+id/question_four_answer_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:text="@string/napoleon"/>
            </RadioGroup>
        </LinearLayout>
        <!--Question 5-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="#212121"
                android:textSize="22sp"
                android:text="@string/question_five" />

            <RadioGroup
                android:id="@+id/question_five_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/question_five_answer_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:text="@string/matthew_passion"/>

                <RadioButton
                    android:id="@+id/question_five_answer_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:text="@string/brandenburg"/>

                <RadioButton
                    android:id="@+id/question_five_answer_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:text="@string/saint_john_passion"/>

                <RadioButton
                    android:id="@+id/question_five_answer_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:fontFamily="@font/quicksand_regular"
                    android:textColor="#212121"
                    android:textSize="22sp"
                    android:text="@string/tempered"/>
            </RadioGroup>
        </LinearLayout>
        <!-- Submit Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" >

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:layout_marginBottom="64dp"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                android:text="Submit"
                android:onClick="getAnswers"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>

